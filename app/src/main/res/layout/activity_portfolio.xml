<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PortfolioActivity"
    android:background="#ffdfeaf1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="My Nanodegree Apps!"
        android:id="@+id/textView"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_weight="0.09"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_large_material" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/button1"
        android:layout_below="@+id/textView"
        android:layout_alignEnd="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:textSize="@dimen/abc_text_size_button_material"
        android:paddingTop="@dimen/abc_button_inset_vertical_material"
        android:paddingBottom="@dimen/abc_button_padding_vertical_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:background="#F08C35"
        android:contentDescription="Spotify Streamer"
        android:onClick="toastMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:id="@+id/button2"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button1"
        android:layout_alignEnd="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:background="#F08C35"
        android:contentDescription="Football Scores"
        android:onClick="toastMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:id="@+id/button3"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button2"
        android:layout_alignEnd="@+id/button4"
        android:layout_alignStart="@+id/button4"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:background="#F08C35"
        android:contentDescription="Library"
        android:onClick="toastMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:id="@+id/button4"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/button3"
        android:layout_alignEnd="@+id/button5"
        android:layout_alignStart="@+id/button5"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:background="#F08C35"
        android:contentDescription="Build It Bigger"
        android:onClick="toastMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:id="@+id/button5"
        android:layout_gravity="center_horizontal"
        android:singleLine="false"
        android:layout_below="@+id/button4"
        android:layout_alignEnd="@+id/button6"
        android:layout_alignStart="@+id/button6"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:background="#F08C35"
        android:contentDescription="XYZ Reader"
        android:onClick="toastMessage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:id="@+id/button6"
        android:layout_gravity="center_horizontal"
        android:singleLine="false"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/abc_text_size_button_material"
        android:layout_marginTop="@dimen/abc_button_padding_vertical_material"
        android:layout_marginBottom="@dimen/abc_button_padding_vertical_material"
        android:background="#fff04447"
        android:padding="@dimen/abc_text_size_button_material"
        android:contentDescription="Capestone"
        android:onClick="toastMessage" />

</RelativeLayout>
